---
layout: layouts/base.ejs
pagination:
  data: collections
  size: 1
  alias: tag

title: Tagged <%= tag %>
permalink: /tags/<%= tag %>/
---

<div class="container mx-auto pt-8">
  <%- include /layouts/header.ejs %>

  <h1>Posts tagged "<%= tag %>"</h1>

  <div class="mt-8">
    <% collections[tag].forEach((post) => { %>
    <div class="my-8">
      <div>
        <a class="text-2xl" href="<%= post.url %>"><%= post.data.title %></a>
      </div>

      <div class="text-grey-800 text-sm">
        <%= this.dateFns.format(new Date(post.date), 'LLLL d, yyyy') %>
      </div>
    </div>
    <% }) %>
  </div>

  <footer class="mt-5 pb-5">
    <a href="/">Back to home</a>
  </footer>
</div>
